<%- include('../static/partials/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">

<link rel="stylesheet" href="/css/application.css">
    </head>

    <body>
        <%- include('../static/partials/navbar.ejs') %>
        <main class="centered">
                <h1 style="margin-top: 30px;font-family: Arial, Helvetica, sans-serif;
                font-size: 24px;
                text-align: center;"><%= product.title %></h1>
                <p><a class="nav-link js-scroll-trigger" href="/#portfolio"style="font-size: 17px;color: black;font-weight: bold;">See in Gallery</a></p>
                <hr>
                <div class="photos">
                    <img src="<%= product.imageUrl %>"  alt="<%= product.title %>">
                    
                </div>
                <h2><%= product.price %>$</h2>
                <p><%= product.description %></p>
                <% if (isAuthenticated) { %>
                    <%- include('../static/partials/add-to-cart.ejs', {product: product}) %>
                <% } %>
            </main>
        <%- include('../static/partials/end.ejs') %>